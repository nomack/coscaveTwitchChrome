{
    "manifest_version": 2,
    "name": "Extension Twitch de la CosCave",
    "description": "Vous ne louperez plus jamais les lives de vos cosplayeurs préférés !",
    "version": "1.0",
    "permissions": [
        "https://api.twitch.tv/*",
        "notifications"
    ],
    "browser_action": {
        "default_icon" : "img/icon_19_off.png",
        "default_popup": "popup.html",
        "default_title": "CosCave - Offline"
    },
    "icons": {
        "128": "img/icon_128.png"
    },
    "background": {
        "scripts": ["js/parameters.js", "js/background.js"]
    }
}
