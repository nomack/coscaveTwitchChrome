{
    "manifest_version": 2,
    "name": "Extension Twitch de la CosCave",
    "description": "Extension permettant de savoir quand vos cosplayeurs préférés sont en live !",
    "version": "1.0",
    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs",
        "notifications"
    ],
    "browser_action": {
        "default_icon" : "img/icon_19.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128" : "img/icon_128.png"
    },
    "background": {
        "scripts": [
            "parameters.js",
            "background.js"
        ]
    },
    "content_scripts": [

    ]
}
